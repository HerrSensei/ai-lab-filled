{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Management Data",
  "description": "Schema for project management data at global and project level",
  "type": "object",
  "properties": {
    "project_info": {
      "type": "object",
      "properties": {
        "project_id": {"type": "string"},
        "project_name": {"type": "string"},
        "version": {"type": "string"},
        "status": {"type": "string", "enum": ["planning", "active", "on_hold", "completed", "archived"]},
        "health": {"type": "string", "enum": ["healthy", "at_risk", "critical"]},
        "last_updated": {"type": "string", "format": "date-time"}
      }
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "status": {"type": "string", "enum": ["pending", "in_progress", "completed", "blocked"]},
          "due_date": {"type": "string", "format": "date"},
          "completed_date": {"type": "string", "format": "date"},
          "progress": {"type": "integer", "minimum": 0, "maximum": 100},
          "dependencies": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "status": {"type": "string", "enum": ["todo", "in_progress", "review", "done"]},
          "priority": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
          "assignee": {"type": "string"},
          "estimated_hours": {"type": "number"},
          "actual_hours": {"type": "number"},
          "created_date": {"type": "string", "format": "date-time"},
          "updated_date": {"type": "string", "format": "date-time"},
          "due_date": {"type": "string", "format": "date"},
          "tags": {"type": "array", "items": {"type": "string"}},
          "milestone": {"type": "string"},
          "dependencies": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "developer": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "focus_areas": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Current focus areas for this project"
        },
        "availability": {
          "type": "string",
          "enum": ["full_time", "part_time", "limited"],
          "description": "Time availability for this project"
        },
        "skills_used": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Skills being utilized in this project"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "budget": {
          "type": "object",
          "properties": {
            "allocated": {"type": "number"},
            "spent": {"type": "number"},
            "currency": {"type": "string"}
          }
        },
        "timeline": {
          "type": "object",
          "properties": {
            "start_date": {"type": "string", "format": "date"},
            "end_date": {"type": "string", "format": "date"},
            "estimated_duration_days": {"type": "integer"}
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "probability": {"type": "string", "enum": ["low", "medium", "high"]},
          "impact": {"type": "string", "enum": ["low", "medium", "high"]},
          "status": {"type": "string", "enum": ["open", "mitigated", "accepted", "closed"]},
          "mitigation_plan": {"type": "string"},
          "owner": {"type": "string"},
          "created_date": {"type": "string", "format": "date-time"},
          "review_date": {"type": "string", "format": "date-time"}
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "progress_percentage": {"type": "integer", "minimum": 0, "maximum": 100},
        "tasks_completed": {"type": "integer"},
        "tasks_total": {"type": "integer"},
        "milestones_completed": {"type": "integer"},
        "milestones_total": {"type": "integer"},
        "budget_utilization": {"type": "number"},
        "time_utilization": {"type": "number"},
        "quality_score": {"type": "number", "minimum": 0, "maximum": 10}
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "type": {"type": "string", "enum": ["decision", "insight", "problem", "solution", "idea"]},
          "title": {"type": "string"},
          "content": {"type": "string"},
          "date": {"type": "string", "format": "date-time"},
          "tags": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "work_sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {"type": "string", "format": "date"},
          "duration_hours": {"type": "number"},
          "focus_area": {"type": "string"},
          "accomplishments": {"type": "array", "items": {"type": "string"}},
          "blockers": {"type": "array", "items": {"type": "string"}},
          "next_session_focus": {"type": "string"}
        }
      }
    }
  }
}
