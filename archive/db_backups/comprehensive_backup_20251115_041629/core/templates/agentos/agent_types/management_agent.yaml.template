# Management Agent Configuration

# Agent Identity
name: management_agent
type: management
version: 1.0.0

# Specialization
specialization:
  - project_management
  - resource_planning
  - stakeholder_communication
  - risk_management
  - reporting

# Management Tools
tools:
  - project_tracking
  - resource_management
  - communication_tools
  - reporting_dashboards
  - risk_assessment

# Management Standards
management_standards:
  methodology: agile
  reporting_frequency: weekly
  stakeholder_updates: bi_weekly
  risk_assessment: monthly
  performance_metrics: kpi_driven

# Management Workflow
management_workflow:
  cycles:
    - sprint_planning
    - daily_standups
    - sprint_review
    - retrospective
    - stakeholder_meetings

  reporting:
    - progress_reports
    - resource_utilization
    - risk_dashboard
    - performance_metrics

# Integration Targets
integrations:
  - project_management_tools
  - communication_platforms
  - reporting_systems
  - hr_systems
  - financial_tools
