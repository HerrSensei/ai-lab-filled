[tool.poetry]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
authors = ["{{ author_name }} <{{ author_email }}>"]
readme = "README.md"
packages = [{include = "src"}]

[tool.poetry.dependencies]
python = "^3.11"

# ESSENTIALS ONLY - Add more dependencies as needed (KISS principle)
# Uncomment what you actually use, don't install "just in case"

# Core Web Framework (uncomment if building web APIs)
# fastapi = "^0.104.1"
# uvicorn = {extras = ["standard"], version = "^0.24.0"}
# pydantic = "^2.5.0"
# pydantic-settings = "^2.1.0"

# HTTP & Async (uncomment if making HTTP requests)
# httpx = "^0.25.2"
# aiofiles = "^23.2.0"

# Logging (uncomment if using structured logging)
# structlog = "^23.2.0"

# AI/ML Dependencies (uncomment ONLY if you actually use them)
# openai = "^1.3.0"  # Uncomment ONLY if using OpenAI
# anthropic = "^0.7.0"  # Uncomment ONLY if using Anthropic
# langchain = "^0.0.350"  # Uncomment ONLY if using LangChain
# langchain-openai = "^0.0.2"  # Uncomment ONLY if using LangChain+OpenAI

# Data Processing (uncomment ONLY if processing data)
# pandas = "^2.1.0"  # Uncomment ONLY if using data processing
# numpy = "^1.24.0"  # Uncomment ONLY if using numerical computing

# Database (uncomment ONLY if you need a database)
# sqlalchemy = "^2.0.0"
# alembic = "^1.12.0"
# asyncpg = "^0.29.0"

# Configuration Management (uncomment ONLY if using YAML/ENV files)
# pyyaml = "^6.0.1"
# python-dotenv = "^1.0.0"

# Monitoring (uncomment ONLY if you need metrics)
# prometheus-client = "^0.19.0"

[tool.poetry.group.dev.dependencies]
# Testing
pytest = "^7.4.3"
pytest-asyncio = "^0.21.1"
pytest-cov = "^4.1.0"

# Code Quality
black = "^23.11.0"
ruff = "^0.1.6"
mypy = "^1.7.1"

# Development Tools
pre-commit = "^3.6.0"
ipython = "^8.17.0"

# Security
bandit = "^1.7.5"
safety = "^2.3.0"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"

# Black Configuration
[tool.black]
line-length = 88
target-version = ['py311']
include = '\.pyi?$'

# Ruff Configuration
[tool.ruff]
target-version = "py311"
line-length = 88
select = [
    "E",  # pycodestyle errors
    "W",  # pycodestyle warnings
    "F",  # pyflakes
    "I",  # isort
    "B",  # flake8-bugbear
    "C4", # flake8-comprehensions
    "UP", # pyupgrade
]
ignore = [
    "E501",  # line too long, handled by black
    "B008",  # do not perform function calls in argument defaults
]

[tool.ruff.per-file-ignores]
"__init__.py" = ["F401"]
"tests/*" = ["B011"]

# MyPy Configuration
[tool.mypy]
python_version = "3.11"
check_untyped_defs = true
disallow_any_generics = true
warn_redundant_casts = true
warn_unused_ignores = true

[[tool.mypy.overrides]]
module = [
    "langchain.*",
    "openai.*",
    "anthropic.*",
]
ignore_missing_imports = true

# Pytest Configuration
[tool.pytest.ini_options]
minversion = "6.0"
addopts = "-ra -q --strict-markers"
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
markers = [
    "slow: marks tests as slow",
    "integration: marks tests as integration tests",
    "unit: marks tests as unit tests",
]

# Coverage Configuration
[tool.coverage.run]
source = ["src"]
omit = [
    "*/tests/*",
    "*/test_*",
    "*/__pycache__/*",
]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "raise AssertionError",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
]
