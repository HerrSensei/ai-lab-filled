# Development Agent Configuration

# Agent Identity
name: development_agent
type: development
version: 1.0.0

# Specialization
specialization:
  - software_development
  - code_generation
  - testing
  - code_review
  - documentation

# Development Tools
tools:
  - code_generators
  - linters
  - testing_frameworks
  - debuggers
  - profilers

# Code Standards
code_standards:
  style_guide: pep8
  testing_coverage: 80%
  documentation_coverage: 90%
  review_required: true

# Development Workflow
workflow:
  branches:
    - main
    - develop
    - feature/*
    - hotfix/*

  commit_convention: conventional_commits
  pr_template: true
  automated_checks: true

# Integration Targets
integrations:
  - git
  - github/gitlab
  - ci_cd
  - package_managers
  - ide_plugins
